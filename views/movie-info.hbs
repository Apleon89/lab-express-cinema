<div id="movie-info-container">

    <div id="movie-info-img">

        <img src="{{movie.image}}" alt="{{movie.title}}">

    </div>
    <div id="movie-info-data">

        <a href="/movies">Go Back</a>

        <h3>{{movie.title}}</h3>

        <h4>Director: {{movie.director}}</h4>

        <h5>Stars</h5>

        <ul id="stars-data">
            {{#each movie.stars}}
            <li>{{this}}</li>
            {{/each}}
        </ul>

        <p>{{movie.description}}</p>

        <ul id="showtime-data">
            {{#each movie.showtimes}}
            <li>{{this}} |</li>
            {{/each}}
        </ul>
    </div>
</div>
